
{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
html {
    scroll-behavior: smooth;
}
</style>
<link rel="stylesheet" href="/assets/app/home.css">

<script src='/assets/splide-slider/main.js'></script>

<div style="width: 100%; height: 100%">
    {# Navbar #}
    {% include 'partials/navbar.html.twig' %}
    {# Home #}
    <section class="home-header">
        {# Content #}
        <div class="overlay"></div>
        <div class="home-header-content">
            <h1 class="home-header-title">Mairie de <span style="color: #FFFF84">Rosière</span> près Troyes</h1>
            <a class="home-header-btn" href="#cal" style='text-decoration: none;'>Notre calendrier</a>
        </div>
    </section>
    {# Calendar #} {# TODO: Add calendar #}
    <section id='cal' class="home-calendar" style="padding-bottom: 50px;">
		<div class="home-next-event-content-wrapper">
        {% include "calendar.html.twig" with {'events': events} %}
		</div>
    </section>
    {# Slider #}
    <section class="splide" aria-label="Splide Basic HTML Example">
        <div class="splide__track">
            <ul class="splide__list">
                <li class="splide__slide"><img src="/assets/img/1.jpg" alt=""/></li>
                <li class="splide__slide"><img src="/assets/img/7.jpg" alt=""/></li>
                <li class="splide__slide"><img src="/assets/img/12.jpg" alt=""/></li>
                <li class="splide__slide"><img src="/assets/img/4.jpg" alt=""/></li>
                <li class="splide__slide"><img src="/assets/img/15.jpg" alt=""/></li>
                <li class="splide__slide"><img src="/assets/img/6.jpg" alt=""/></li>
                <li class="splide__slide"><img src="/assets/img/8.jpg" alt=""/></li>
                <li class="splide__slide"><img src="/assets/img/11.jpg" alt=""/></li>
            </ul>
        </div>
    </section>
    {# Mot du maire #}
    <section class="home-mot-maire">
        <img class="home-mot-maire-image" src="https://commune-rosieres10.fr/IMG/jpg/photo_m._raymond_2.jpg" alt="Next event">
        <div class="home-mot-maire-content-wrapper">
            <h4 class="home-mot-maire-title">Mot du maire</h4>
            <p class="home-mot-maire-description">Bienvenue sur notre calendrier partagé de la ville de Rosière ! Ce nouveau système vous permettera de toujours rester au courant des prochains évènement de la commune.</p>
        </div>
    </section>
    
    {# Footer #}
    <section class="home-next-event">
    {% include 'partials/footer.html.twig' %}
    </section>
</div>
{% endblock %}

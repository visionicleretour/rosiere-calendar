{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    * {
       box-sizing: border-box; 
    }
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }

    a {
        text-decoration: none;
        color: black;
    }

    .card {
        text-decoration: none;
        border: 1px solid rgba(150, 172, 238, 0.8);
        margin-bottom: 2%;
        padding: 12px 24px;
    }

    .card h3 {
        font-size: 2em;
    }
</style>

<div style="background-color: rgba(65, 105, 225, 1); height:90px;">
    {% include 'partials/navbar.html.twig' %}
</div>

<div class="example-wrapper">
    <h1>Tous nos articles</h1>

    {% for article in articles %}
    <a href='{{ path("app_see_article", {"id": article.id})}}'>
        <div class="card">
            <h3> {{article.title}} </h3>
            <span> Par {{article.author.firstname}} le {{article.createdAt|date("d/m/Y")}} </span>
        </div>
    </a>

    {% endfor %}
</div>
{% endblock %}
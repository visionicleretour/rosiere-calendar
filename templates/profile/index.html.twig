{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}

    <link rel="stylesheet" href="/assets/app/profile.css">

    {# Navbar #}
    {% include 'partials/navbar.html.twig' %}

    <div class="profile">
        <div class="profile-wrapper">
            <h3 class="profile-title">Details du profile</h3>
        
            {{ form_start(form) }}
                <div class="profile-infos-wrapper">
                    <div class="profile-info-wrapper">
                        {# L'email est "disabled" donc champs à grisé #}
                        <label for="email" class="profile-label">Email:</label>
                        {{ form_widget(form.email) }} 
                        {{ form_errors(form.email) }}
                    </div>
                    
                    <div class="profile-info-wrapper">
                        <label for="firstname" class="profile-label">Prénom:</label>
                        {{ form_widget(form.firstname) }}
                        {{ form_errors(form.firstname) }}
                    </div>
                    
                    <div class="profile-info-wrapper">
                        <label for="lastname" class="profile-label">Nom:</label>
                        {{ form_widget(form.lastname) }}
                        {{ form_errors(form.lastname) }}
                    </div>
                </div>
        
                <div class="profile-buttons-wrapper">
                    {# TODO: Ask #}
                    {# {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %} #}
                    <button type="submit">Modifier</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}